<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <!-- Latest compiled and minified Bootstrap 5 CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous" />
        <link rel="stylesheet" href="/css/main.css" />

        <title>Categories Page</title>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <%- include('partials/navbar', {page: '/about'}) %>
            </div>
            <!-- /.container-fluid -->
        </nav>
        <div class="container" style="padding-top: 90px;">
            <div class="row">
                <div class="col-md-12">
                    <h2>Categories</h2>

                    <!-- Add Category Button -->
                    <a href="/categories/add" class="btn btn-success pull-right">Add Category</a>

                    <hr />
                    <% if (message) { %>
                        <strong> <%= message %> </strong>
                    <% } else { %>
                    <hr />

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Category ID</th>
                                <th>Category Name</th>
                                <th></th> <!-- Empty header for remove button -->
                            </tr>
                        </thead>
                        <tbody>
                            <% categories.forEach(category => { %>
                                <tr>
                                    <td>
                                        <a href="/items?category=<%= category.id %>"> <%= category.id %> </a>
                                    </td>
                                    <td>
                                        <a href="/items?category=<%= category.id %>"> <%= category.category %> </a>
                                    </td>
                                    <td>
                                        <a href="/categories/delete/<%= category.id %>" class="btn btn-danger">Remove</a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Latest compiled and minified Bootstrap 5 JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    </body>
</html>